/**
 * CClaire Embroidery Custom Shopify CSS 
 */

$cclaireBtnHoverDarken:         5%;

/* bgcolors */
$color_bg_main:                 {{ settings.color_bg_main }};
$color_bg_header:               {{ settings.color_bg_header }};
$color_bg_footer:               {{ settings.color_bg_footer }};
$color_nav_divider:             {{ settings.color_nav_divider }};
$nav_drop_bg:                   {{ settings.nav_drop_bg }};
$color_paging_bg:               {{ settings.color_paging_bg }};
$color_form_field_bg:           {{ settings.color_form_field_bg }};
$color_form_field_border:       {{ settings.color_form_field_border }};
$color_general_divider:         {{ settings.color_general_divider }};
/* buttons */
$color_btn_text:                {{ settings.color_btn_text }};
$color_btn_bg:                  {{ settings.color_btn_bg }};
$color_btn_alt_bg:              {{ settings.color_btn_alt_bg }};
$color_paging_bg:               {{ settings.color_paging_bg }};
/* homepage slider overlay */
$color_slider_mask:             {{ settings.color_slider_mask }};
$color_slider_alpha:            .8;
$color_slider_text:             {{ settings.color_slider_text }};
/* text colors */
$color_body_standard:           {{ settings.color_body_standard }};
$color_body_link:               {{ settings.color_body_link }};
$color_body_nav:                {{ settings.color_body_nav }};
$color_body_heading:            {{ settings.color_body_heading }};
$color_form_field_text:         {{ settings.color_form_field_text }};
$color_head_general:            {{ settings.color_head_general }};
$color_foot_standard:           {{ settings.color_foot_standard }};
$color_foot_heading:            {{ settings.color_foot_heading }};
$color_foot_link:               {{ settings.color_foot_link }};
/* fonts */
$font_standard_size:            {{ settings.font_standard_size }}px;
$font_heading_size:             {{ settings.font_heading_size }}px;
$nav_drop_font_size:            {{ settings.nav_drop_font_size }}px;
$font_nav_size:                 {{ settings.font_nav_size }}px;
$font_prod_title_size:          {{ settings.font_prod_title_size }}px;
$fontBigPriceSize:              {{ settings.font_heading_size | plus: -12 }}px;
/* images */
$theme_icons_mode_head:         {{ settings.theme_icons_mode_head }};
$theme_icons_mode_body:         {{ settings.theme_icons_mode_body }};
/* misc */
$prod_sale_mode:                {{ settings.prod_sale_mode }};

.options .shappify_option, .selectors {
  padding-bottom: 0;
  margin-bottom: 10px;
  position: relative;
  min-height: 38px;
}

.options .shappify_option .shappify_option_name, .selectors label {
  float: left;
  text-align: right;
  width: 160px;
}

.options .shappify_option .shappify_option_value, .selectors .select-wrapper {
  position: absolute;
  left: 170px;
  right: 0;
}

.options #shapp_option_list {
  padding-left: 0;
  padding-right: 0;
}
.options .shappify-option-title {
  padding: 0;
  font-size: 20px;
  line-height: 28px;
}

/* Hover for standard text <a> tags */
#maincontent p a,
#maincontent .content-block a,
#maincontent .contentsection a,
#maincontent .tags a,
#maincontent .info a,
#maincontent .pagesnippetwidget a,
#maincontent .recentarticles a h4,
#maincontent #basket .desc a,
#maincontent #basket .remove a {
  border-bottom: 1px dashed transparent;
  -webkit-transition: border-color 200ms linear;
  -moz-transition: border-color 200ms linear;
  -o-transition: border-color 200ms linear;
  transition: border-color 200ms linear;
}
#maincontent p a:hover,
#maincontent .content-block a:hover,
#maincontent .contentsection a:hover,
#maincontent .tags a:hover,
#maincontent .info a:hover,
#maincontent .pagesnippetwidget a:hover,
#maincontent .recentarticles a h4:hover,
#maincontent #basket .desc a:hover,
#maincontent #basket .remove a:hover {
  border-color: $color_body_link;
}

.price,
[itemprop="price"],
.amount,
.total,
#cost {
  font-family: "Droid Sans", Helvetica, Arial, sans-serif !important;
}
.price strong,
[itemprop="price"] strong,
.amount strong,
.total strong,
#cost strong {
  font-weight: 700 !important;
}

#productinfo [itemprop="price"] strong {
  font-size: $fontBigPriceSize;
}

#cost {
  font-weight: 700 !important;
}

a.button,
input.button,
.button a {
  font-size: 1.05em;
  border: none !important;
  background: $color_btn_bg;
  color: $color_btn_text;
  text-decoration: none !important;
  padding: 7px 15px;
  cursor: pointer;
  display: inline-block;
  zoom: 1;
  *display: inline;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -ms-border-radius: 2px;
  -o-border-radius: 2px;
  border-radius: 2px;
}
a.button:hover,
input.button:hover,
.button a:hover {
  color: $color_btn_text;
  background-color: darken($color_btn_bg, $cclaireBtnHoverDarken);
}

a.button.altcolor,
input.button.altcolor,
.button.altcolor a {
  background-color: $color_btn_alt_bg;
}
a.button.altcolor:hover,
input.button.altcolor:hover,
.button.altcolor a:hover {
  background-color: darken($color_btn_alt_bg, $cclaireBtnHoverDarken);
}

a.button.large,
input.button.large,
.button.large a {
  padding: 15px;
  display: block;
  text-transform: uppercase;
  font-size: 20px;
}

a.button.large.plus,
input.button.large.plus,
.button.large.plus a {
  text-align: left;
}

a:focus,
button:focus,
input[type="submit"]:focus {
  outline: 0;
}

.betweenbuttons {
  margin-left: 10px;
  margin-right: 10px;
}

.minibutton:hover, .minibutton:focus {
  color: #a8b73a;
}
.minibutton.minus:hover, .minibutton.minus:focus {
  color: #bf3030;
}

.button.remove {
  filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=50);
  opacity: 0.5;
}
.button.remove:hover, .button.remove:focus {
  filter: progid:DXImageTransform.Microsoft.Alpha(Opacity=100);
  opacity: 1;
  background-color: #bf3030 !important;
}

input:focus,
textarea:focus,
select:focus {
  background-color: #fff;
  outline: 0;
  border-color: $color_btn_bg;
  -webkit-box-shadow: 0 0 0 1px $color_btn_bg;
  -moz-box-shadow: 0 0 0 1px $color_btn_bg;
  box-shadow: 0 0 0 1px $color_btn_bg;
}

#mainslider {
  position: relative;
}

#mainslider .flexslider .slides > li img {
  width: 100%;
}

#mainslider .overlay {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  z-index: 20;
  background: $color_slider_mask !important;
  background: rgba(255, 255, 255, 0.8) !important;
}

#mainslider .overlay.left,
#mainslider .overlay.right {
  top: 0;
  bottom: auto;
  height: 100%;
  width: 300px;
}

#mainslider .overlay.right {
  left: auto;
  right: 0;
}

#mainslider .overlay.bottom {
  padding: 10px 0 15px;
}

#mainslider .overlay p,
#mainslider .overlay h6 {
  color: $color_slider_text;
  margin: 5px 15px;
}

#mainslider .overlay.left .title,
#mainslider .overlay.right .title {
  margin-top: 30px;
  margin-bottom: 10px;
}

#mainslider .overlay .price {
  font-size: 190%;
  margin: 10px 15px 20px;
  display: block;
  color: $color_slider_text;
}

#mainslider .overlay.bottom.haslower .price {
  text-align: right;
}

#mainslider .overlay .button {
  border-color: transparent;
  text-align: center;
  margin: 10px 15px 0;
}

#mainslider .overlay.left .lower,
#mainslider .overlay.right .lower {
  margin: 0;
  position: absolute;
  bottom: 0;
  padding-bottom: 15px;
  width: 100%;
}

#mainslider .overlay.bottom.haslower .upper {
  float: left;
  width: 68%;
}

#mainslider .overlay.bottom.haslower .lower {
  float: left;
  width: 32%;
}

#mainslider .flex-direction-nav {
  display: none;
}

#mainslider .flex-control-nav li a {
  height: 8px;
  width: 8px;
}

#mainslider .flex-control-nav {
  display: block;
}

.template-cart #maincontent {
  top: 30px;
}

#basket textarea {
  width: 360px;
  height: 80px;
}
#basket ul > li:first-child .cartitem {
  padding-top: 0;
  border-top: 0;
}
#basket .cartitem {
  border-bottom: 1px solid $color_general_divider;
  padding: 11px 0 30px;
}
#basket .cartitem .image,
#basket .cartitem .desc,
#basket .cartitem .qty,
#basket .cartitem .amt,
#basket .cartitem .remove {
  float: left;
  padding: 19px 0 0;
}
#basket .cartitem .image {
  width: 13%;
  margin-right: 2%;
  margin-top: 19px;
  padding-top: 0;
}
#basket .cartitem .image img {
  max-height: 100%;
  max-width: 100%;
}
#basket .cartitem .desc {
  width: 38%;
  color: lighten($color_foot_standard, 8);
}
#basket .cartitem .desc .title {
  display: block;
  font-size: 16px;
  margin-bottom: 19px;
}
#basket .cartitem .desc .title a {
  /**/
}
#basket .cartitem .desc .properties li {
  font-size: 12px;
  line-height: 16px;
}
#basket .cartitem .desc .properties li strong {
  color: lighten($color_foot_standard, 15);
}
#basket .cartitem .desc .long-desc {
  display: none;
}
#basket .cartitem .qty {
  width: 17%;
  padding-top: 0;
}
#basket .cartitem .qty,
#basket .cartitem .qty input {
  text-align: center;
}
#basket .cartitem .qty label {
  display: block;
  font-size: 80%;
}
#basket .cartitem .qty .minibutton {
  min-width: 34px;
  padding-left: 0;
  padding-right: 0;
}
#basket .cartitem .qty input {
  font-size: 100%;
  width: 38px;
  text-indent: 0;
  -webkit-transition: all 0.2s linear;
  -moz-transition: all 0.2s linear;
  -o-transition: all 0.2s linear;
  transition: all 0.2s linear;
  background-color: rgba(237, 237, 237, 0.1);
  color: $color_btn_text;
}
#basket .cartitem .qty input:focus {
  background-color: #ededed;
  color: $color_form_field_text;
}
#basket .cartitem .amt {
  width: 15%;
  text-align: center;
  line-height: 33px;
}
#basket .cartitem .amt .amount {
  font-size: $font_standard_size + 2;
}
#basket .cartitem .remove {
  width: 15%;
  text-align: center;
  /**/
}
#basket .cartitem .remove .button {
  float: none;
  width: auto;
  padding: 7px 15px;
}
#basket .foot {
  padding-top: 22px;
}
#basket .foot.top {
  float: left;
  width: 100%;
  clear: both;
  position: absolute;
  top: 0;
  right: 10px;
}
#basket .foot.top .updatecont,
#basket .foot.top .checkoutcont {
  float: right;
}
#basket .foot.top .updatecont {
  margin-top: 1px;
}
#basket .foot.top .updatecont .button {
  float: right;
  margin-right: 13px;
}
#basket .foot.top .checkoutcont {
  padding-right: 26px;
}
#basket .foot.top .checkoutcont .total {
  margin-top: 11px;
  float: right;
  width: 66%;
}
#basket .foot.top .checkoutcont .button {
  text-transform: uppercase;
}
#basket .foot .button {
  display: inline;
}
#basket .foot .instructions,
#basket .foot .updatecont,
#basket .foot .checkoutcont {
  float: left;
}
#basket .foot .instructions {
  width: 53%;
}
#basket .foot .updatecont {
  width: 17%;
  text-align: center;
  margin-top: 11px;
}
#basket .foot .checkoutcont {
  width: 30%;
  text-align: center;
}
#basket .foot .checkoutcont .total {
  margin-top: 21px;
  float: left;
  width: 50%;
  font-size: $fontBigPriceSize;
}
#basket .foot .checkoutcont .button,
#basket .foot .checkoutcont .extrapaymentmethods {
  float: right;
}
#basket .foot .checkoutcont .extrapaymentmethods {
  clear: right;
}
#basket .foot .extrapaymentmethods input[type="image"] {
  border: 0;
  background-color: $color_body_standard;
  padding: 2px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  -ms-border-radius: 2px;
  -o-border-radius: 2px;
  border-radius: 2px;
}
#basket .foot .extrapaymentmethods input[type="image"]:hover, #basket .foot .extrapaymentmethods input[type="image"]:focus {
  background-color: lighten($color_body_standard, 5);
}
#basket .foot .extrapaymentmethods input[type="image"][name="goto_pp"] {
  padding: 2px 1px 0;
}

@media only screen and (max-width: 767px) {
  #basket .cartitem .image,
  #basket .cartitem .desc {
    float: none;
    width: 100%;
  }
  #basket .cartitem .desc {
    margin-bottom: 15px;
  }
  #basket .cartitem .qty,
  #basket .cartitem .amt,
  #basket .cartitem .remove {
    padding-top: 30px;
    width: 33%;
  }
  #basket .cartitem .qty {
    padding-top: 11px;
  }
  #basket .foot.top {
    display: none;
  }
  #basket .foot .instructions,
  #basket .foot .instructions textarea,
  #basket .foot .updatecont,
  #basket .foot .checkoutcont {
    float: none;
    width: 100%;
  }
  #basket .foot .updatecont,
  #basket .foot .checkoutcont .total {
    margin-top: 0;
  }
  #basket .foot .checkoutcont .total {
    float: none;
    width: auto;
  }
}
#shipping-calculator .selectreplace {
  vertical-align: middle;
  width: 100%;
}
#shipping-calculator label {
  display: block;
  margin-bottom: 3px;
  margin-top: 5px;
}
#shipping-calculator input[type="text"] {
  width: 100%;
}
#shipping-calculator .button {
  margin-top: 25px;
  padding: 7px 22px;
}

.selectors {
  float: left;
  clear: both;
  width: 100%;
}

.options > .selectors:first-of-type {
  margin-top: 10px;
}

#maincontent .contentsection.social {
  padding-bottom: 3px;
}
#maincontent .contentsection.social > .socialitem,
#maincontent .contentsection.social > a {
  margin-top: -1px;
}

.description ul.tabs li a {
  padding: 0 15px;
}
.description ul.tabs li a.active {
  padding-top: 4px;
}

#productinfo #rg-gallery,
#productinfo #detail {
  margin-top: 0;
}
#productinfo #rg-gallery > h1,
#productinfo #detail > h1 {
  margin: 0;
  padding: 0;
  line-height: 28px;
}
#productinfo #rg-gallery .addbuttoncont,
#productinfo #detail .addbuttoncont {
  float: left;
  clear: both;
  width: 100%;
  margin-top: 20px;
}
#productinfo #rg-gallery .addbuttoncont.dummy,
#productinfo #detail .addbuttoncont.dummy {
  margin-top: 0;
}
#productinfo #rg-gallery .addbuttoncont.dummy a,
#productinfo #detail .addbuttoncont.dummy a {
  width: auto;
}
#productinfo .singleimage {
  margin-top: 0;
  padding-bottom: 20px;
}

.rg-image-wrapper {
  padding: 0;
}
.eight.columns .rg-image-wrapper {
  min-height: 342px;
}

.es-carousel-wrapper {
  padding: 2px 0;
}

@media only screen and (min-width: 768px) and (max-width: 959px) {
  .eight.columns .rg-image-wrapper {
    min-height: 271px;
  }

  .description ul.tabs li a {
    padding: 0 7px;
  }
}
@media only screen and (max-width: 767px) {
  #productinfo {
    margin-bottom: 20px;
  }

  .eight.columns .rg-image-wrapper {
    min-height: 223px;
  }
  .eight.columns .contentsection.social, .eight.columns .contentsection.producttype {
    display: none;
  }

  #maincontent #crumbs {
    display: none;
  }
}
@media only screen and (min-width: 480px) and (max-width: 767px) {
  .eight.columns .rg-image-wrapper {
    min-height: 313px;
  }
}
.collapse {
  -webkit-transition: height 0.35s ease;
  -moz-transition: height 0.35s ease;
  -o-transition: height 0.35s ease;
  transition: height 0.35s ease;
  height: 0;
  overflow: hidden;
}
.collapse.in {
  height: auto;
}

.hidden {
  display: none;
}

.hide {
  display: none !important;
}

.show {
  display: inherit !important;
}
