    {% endif %}
}

.rg-image-nav a {
    background: url('{{ 'gallery-nav.png' | asset_url }}') no-repeat -20% 50%;
}

.rg-view a {
    background: #464646 url('{{ 'gallery-views.png' | asset_url }}') no-repeat top left;   
}

.rg-loading,
.lbLoading {
    background: url('{{ settings.loading_graphic | asset_url }}') no-repeat center center;
}

.es-nav span{
    font-family: {{ font_heading_type }}, Helvetica, Arial, sans-serif;
}

#lbPrevLink:hover {
  background: transparent url('{{ 'prevlabel.gif' | asset_url }}') no-repeat 0 15%;
}

#lbNextLink:hover {
  background: transparent url('{{ 'nextlabel.gif' | asset_url }}') no-repeat 100% 15%;
}

#lbCloseLink {
  background: transparent url('{{ 'closelabel.gif' | asset_url }}') no-repeat center;
}

/* High DPI devices get some graphical upgrades */
@media only screen and (-webkit-min-device-pixel-ratio: 1.5),
    only screen and (-o-min-device-pixel-ratio: 3/2),
    only screen and (min--moz-device-pixel-ratio: 1.5),
    only screen and (min-device-pixel-ratio: 1.5) {
        #util-bar .socialicons li a,
        #maincontent .socialicons .rss {
            background-image: url('{{ 'social_icons_2x.png' | asset_url }}');
            -moz-background-size: 84px 196px;
            -ie-background-size: 84px 196px;
            -o-background-size: 84px 196px;
            -webkit-background-size: 84px 196px;
            background-size: 84px 196px;
        }
        
        #util-bar .actions .logindrop,
        #util-bar .actions .searchbtn,
        #pageheader nav ul li .hasdropdown,
        .paging a.prev,
        .paging a.next,
        .flex-direction-nav .flex-next,
        .flex-direction-nav .flex-prev {
            background-image: url('{{ 'theme_icons_2x.png' | asset_url }}');
            background-size: 14px 500px;
        }
}

