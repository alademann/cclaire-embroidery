  Site
-------------------------  */

  body {
      font:{{ settings.font_standard_style }} {{ settings.font_standard_size }}px {{ font_standard_type }}, sans-serif;
      line-height: 1.4em;
      color:{{ settings.color_body_standard }};
      background:{{ settings.color_bg_main }}
      {% unless settings.bg_image_body == '' %}
          {% if settings.bg_offset_body_y == '' %}
              {% assign bg_offset_body_y = '0px' %}
          {% else %}
              {% capture bg_offset_body_y %}{{ settings.bg_offset_body_y }}px{% endcapture %}
          {% endif %}
          url('{{ settings.bg_image_body | asset_url }}') {{ settings.bg_repeat_body | replace: 'top', bg_offset_body_y }}
      {% endunless %};
  }

  h1, h2, h3, h4, h5, h6 {
      font:{{ settings.font_heading_style }} {{ settings.font_heading_size }}px/{{ settings.font_heading_size }}px {{ font_heading_type }}, sans-serif;
  }

  h2 {
      font-size:{{ settings.font_heading_size | plus: -4 }}px;
  }
  h3 {
      font-size:{{ settings.font_heading_size | plus: -6 }}px;
  }
  h4 {
      font-size:{{ settings.font_heading_size | plus: -8 }}px;
  }
  h5 {
      font-size:{{ settings.font_heading_size | plus: -10 }}px;
  }
  h6 {
      font-size:{{ settings.font_heading_size | plus: -12 }}px;
  }

  i, em {
      font-style:italic;
  }

  b, strong {
      font-weight:bold;
  }

  a {
      color:{{ settings.color_body_link }};
      text-decoration:none !important;
      border-bottom: 1px dashed transparent !important;
  }

  a:hover {
      color:{{ settings.color_body_link }} !important;
      border-bottom: 1px dashed {{ settings.color_body_link }} !important;
      text-decoration: none;
  }

  a.highlight {
      display:inline-block;
      zoom:1;
      *display:inline;
      max-width:100%;
      -moz-transition: box-shadow 200ms; /* Firefox 4 */
      -webkit-transition: box-shadow 200ms; /* Safari and Chrome */
      -o-transition: box-shadow 200ms; /* Opera */
      transition: box-shadow 200ms;
  }

  a.highlight img {
      z-index:-1;
      position:relative;
  }

  .error {
      color:{{ settings.color_body_link }};
      font-style:italic;
  }

  input,
  .textboxcont,
  textarea {
      background:{{ settings.color_form_field_bg }};
      border:1px solid {{ settings.color_form_field_border }};
      color:{{ settings.color_form_field_text }};
      -moz-transition: border-color 200ms; /* Firefox 4 */
      -webkit-transition: border-color 200ms; /* Safari and Chrome */
      -o-transition: border-color 200ms; /* Opera */
      transition: border-color 200ms;
      -webkit-appearance: none; /* iOS */
      
      -moz-border-radius: 5px 5px 5px 5px;
      -webkit-border-radius: 5px 5px 5px 5px;
      border-radius: 5px 5px 5px 5px;
  }

  input, input.short {
      padding: 0;
      height: 28px;
      line-height: 28px;
      text-indent: 6px;
  }
  input[type=text], input[type=password] {
    padding: 0 !important;
  }

  input:focus,
  textarea:focus,
  select:focus {
      background-color: #fff;
      outline: 0;
      border-color: {{ settings.color_btn_bg }};
      @include box-shadow(0 0 0 1px {{ settings.color_btn_bg }});
  }

  input[type=radio] {
      -webkit-appearance: radio;
  }

  .textboxcont input {
      border:0;
      height:36px;
      width:100%;
      text-indent:18px;
  }

  textarea {
      width:95%;
      padding:5px;
      height:100px;
      margin-top:8px;
  }

  input[type=submit] {
      height: auto;
      text-indent: 0;
      cursor: pointer;
  }

  input[type=checkbox] {
      vertical-align:middle;
      -webkit-appearance: checkbox;
  }

  .hidden {
      display:none;
  }

  a.button,
  input.button,
  .button a,
  input[type="submit"] {
      outline: 0 !important;
      border:none !important;
      background:{{ settings.color_btn_bg }};
      font:1.05em {{ font_heading_type }},Arial,sans-serif;
      color: {{ settings.color_btn_text }};
      padding:7px 15px;
      cursor:pointer;
      display:inline-block;
      zoom:1;
      *display:inline;
      
      -webkit-box-shadow: 0 0 2px 0 #000;
      -moz-box-shadow: 0 0 2px 0 #000;
      box-shadow: 0 0 2px 0 #000;

      -webkit-border-radius: 2px;
      -moz-border-radius: 2px;
      border-radius: 2px;
  }

  a.button.altcolor,
  input.button.altcolor,
  .button.altcolor a {
      background-color:{{ settings.color_btn_alt_bg }};
  }


  a.button.large,
  input.button.large,
  .button.large a {
      padding:15px;
      display:block;
      text-transform:uppercase;
      font-size:20px;
  }

  a.button.large.plus,
  input.button.large.plus,
  .button.large.plus a {
      text-align:left;
  }

  a.button:hover,
  input.button:hover,
  .button a:hover,
  input[type="submit"]:hover {
      color: {{ settings.color_btn_text }};
      -webkit-box-shadow: 0 0 2px 1px #000;
      -moz-box-shadow: 0 0 2px 1px #000;
      box-shadow: 0 0 2px 1px #000;
  }

  .betweenbuttons {
      margin-left:10px;
      margin-right:10px;
  }

  .loadingimg {
      background:url({{ settings.loading_graphic | asset_url }}) center center no-repeat;
      min-height:40px;
  }


